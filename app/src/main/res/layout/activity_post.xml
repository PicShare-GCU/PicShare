<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/color13">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/post_bar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:theme="?attr/actionBarTheme"
        app:title="Write"
        app:titleCentered="true"
        app:titleTextColor="@color/black"
        android:elevation="4dp">
    </com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:fontFamily="@font/eb"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/color8"
                    android:layout_margin="10dp"/>

                <EditText
                    android:id="@+id/post_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/b"
                    android:background="@drawable/edittext_background"
                    android:padding="7dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name of Alcohol"
                    android:textSize="17dp"
                    android:fontFamily="@font/eb"
                    android:textStyle="bold"
                    android:textColor="@color/color8"
                    android:layout_margin="10dp"/>

                <EditText
                    android:id="@+id/post_alcohol_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/b"
                    android:layout_margin="10dp"
                    android:padding="7dp"
                    android:background="@drawable/edittext_background"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content"
                android:fontFamily="@font/eb"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="@color/color8"
                android:layout_margin="10dp"/>

            <EditText
                android:id="@+id/post_content"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:hint="Write your recipe."
                android:fontFamily="@font/b"
                android:gravity="left"
                android:background="@drawable/edittext_background"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:padding="7dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Category"
                android:fontFamily="@font/eb"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="@color/black"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="only one"
                android:fontFamily="@font/b"
                android:textColor="#3C3C3C"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:stretchColumns="0,1,2,3"

                >

                <TableRow>

                    <Button
                        android:id="@+id/vodka"
                        android:layout_gravity="center"
                        android:background="@drawable/click_before"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:text="Vodka"
                        android:fontFamily="@font/eb"/>
                    <Button
                        android:id="@+id/gin"
                        android:text="Gin"
                        android:fontFamily="@font/eb"
                        android:layout_gravity="center"
                        android:background="@drawable/click_before"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        />
                    <Button
                        android:id="@+id/whisky"
                        android:text="Whisky"
                        android:fontFamily="@font/eb"
                        android:layout_gravity="center"
                        android:background="@drawable/click_before"

                        />
                    <Button
                        android:id="@+id/brandy"
                        android:text="Brandy"
                        android:fontFamily="@font/eb"
                        android:layout_gravity="center"
                        android:background="@drawable/click_before"
                        android:layout_marginRight="5dp"
                        />

                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/tequila"
                        android:text="Tequila"
                        android:fontFamily="@font/eb"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/click_before"
                        />
                    <Button
                        android:id="@+id/rum"
                        android:text="Rum"
                        android:fontFamily="@font/eb"
                        android:layout_gravity="center"
                        android:background="@drawable/click_before"
                        />
                    <Button
                        android:id="@+id/vermouth"
                        android:text="Vermouth"
                        android:fontFamily="@font/eb"
                        android:layout_gravity="center"
                        android:background="@drawable/click_before"
                        />
                    <Button
                        android:id="@+id/wine"
                        android:text="Wine"
                        android:fontFamily="@font/eb"
                        android:layout_gravity="center"
                        android:background="@drawable/click_before"
                        />

                </TableRow>

                <TableRow>

                    <Button
                        android:id="@+id/liqueur"
                        android:text="Liqueur"
                        android:fontFamily="@font/eb"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/click_before"
                        />

                    <Button
                        android:id="@+id/beer"
                        android:text="Beer"
                        android:fontFamily="@font/eb"
                        android:layout_gravity="center"
                        android:background="@drawable/click_before"
                        />
                    <Button
                        android:id="@+id/non"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="Non-Alcohol"
                        android:fontFamily="@font/eb"
                        android:layout_gravity="center"
                        android:background="@drawable/click_before"
                        />
                    <Button
                        android:id="@+id/etc"
                        android:text="Etc"
                        android:fontFamily="@font/eb"
                        android:layout_gravity="center"
                        android:background="@drawable/click_before"
                        />

                </TableRow>
            </TableLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingBottom="15dp"
                >

                <TextView
                    android:id="@+id/select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select a Representative Image"
                    android:fontFamily="@font/eb"
                    android:textStyle="bold"
                    android:textSize="17dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="37dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <Button
                    android:id="@+id/getImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Attach\nImage"
                    android:fontFamily="@font/eb"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/click_after"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="10dp"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <ImageView
                android:id="@+id/post_image"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:background="@drawable/round_corner"
                android:scaleType="fitCenter"/>

        </LinearLayout>



    </ScrollView>


</LinearLayout>