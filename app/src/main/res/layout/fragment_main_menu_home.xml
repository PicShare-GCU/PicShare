<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".util.LoginActivity">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        >



        <ImageView
            android:id="@+id/picshare_logo"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:src="@drawable/picshare2"
            android:layout_centerHorizontal="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:id="@+id/login_fragment_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/picshare_logo"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PicShare automatically recognizes your liquor when you take a picture of it and tells you the name of it.
\n\nIt also finds and shows cocktail recipes with the liquor in the community.\n\nWhen a user leaves a review on a post, we provide a taste-based categorization through text analysis."
                android:textStyle="normal"
                android:fontFamily="@font/b"
                android:textSize="16sp"
                android:textColor="@color/color8"
                android:padding="10dp"
                android:layout_gravity="center"
                />

            <Button
                android:id="@+id/find_alcoh_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Find the name of liquor"
                android:fontFamily="@font/eb"
                android:textColor="@color/white"
                android:layout_marginTop="60dp"
                android:background="@drawable/login_button"
                />



        </LinearLayout>






    </androidx.constraintlayout.widget.ConstraintLayout>




</LinearLayout>


